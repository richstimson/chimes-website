---
// Hello World component - a simple example Astro component
export interface Props {
  name?: string;
  message?: string;
}

const { name = "World", message = "Hello" } = Astro.props;
---

<div class="hello-world bg-base-100 p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-primary mb-2">
    {message}, {name}!
  </h2>
  <p class="text-base-content/80">
    This is a simple Astro component. You can pass props to customize it.
  </p>
  <div class="mt-4">
    <button class="btn btn-primary">
      Click me!
    </button>
  </div>
</div>

<style>
  .hello-world {
    border: 2px solid var(--fallback-bc, oklch(var(--bc) / 0.2));
  }
  
  .hello-world:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease;
  }
</style>
