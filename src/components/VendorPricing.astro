<section class="py-20 bg-white" id="pricing">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- Header -->
      <div class="text-center mb-16 scroll-trigger">
        <h2 class="text-4xl lg:text-5xl font-bold text-base-content mb-6">
          Simple <span class="text-primary">Pricing</span> for Vendors
        </h2>
        <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
