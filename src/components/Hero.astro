---
// Hero section with Foundit Food style - app mockup and ice cream background
---

<section class="relative min-h-screen bg-base-100 ice-cream-bg overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 ice-cream-pattern opacity-30"></div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 pt-2 pb-20 sm:py-20">
    <!-- Mobile logo/title -->
    <div class="text-center sm:hidden mb-4">
      <h1 class="text-4xl font-bold text-primary">Chimes!</h1>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 items-center min-h-screen">
      
      <!-- Left side - Content -->
      <div class="text-center lg:text-left order-2 lg:order-1">
        <!-- User type selector -->
        <div class="inline-flex bg-white rounded-full p-1 mb-8 shadow-lg">
          <a href="#download" class="px-6 py-2 rounded-full bg-primary text-primary-content text-sm font-medium transition-all hover:scale-105">
            I'm looking for ice cream
          </a>
          <a href="#vendor" class="px-6 py-2 rounded-full bg-secondary text-secondary-content text-sm font-medium transition-all hover:scale-105">
            I'm a vendor
          </a>
        </div>
        
        <h1 class="text-4xl lg:text-6xl font-bold text-base-content mb-6 leading-tight animate-fade-in-up">
          Get notifications when your 
          <span class="text-primary block">favourite ice cream van</span> 
          is in your area!
        </h1>
        
        <p class="text-xl text-base-content/80 mb-8 leading-relaxed animate-fade-in-up delay-100">
          Never miss your favourite ice cream van again. Get real-time notifications 
          when ice cream vans are in your area with Chimes!
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-8 animate-fade-in-up delay-200">
          <a href="#download" class="btn btn-primary btn-lg text-primary-content px-8 hover:scale-105 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            Get Chimes Now
          </a>
          
          <a href="#features" class="btn btn-outline btn-lg hover:scale-105 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.01M15 10h1.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Learn More
          </a>
        </div>
        
        <div class="text-base-content/60 animate-fade-in-up delay-250 mb-6">
          <p class="text-sm text-center">
            Join thousands of ice cream lovers who never miss their favourite treats
          </p>
        </div>
        
        <!-- Vendor Register Interest Section -->
        <div class="bg-gradient-to-br from-primary/10 to-secondary/10 border border-primary/20 rounded-xl p-6 shadow-lg mb-8 animate-fade-in-up delay-300">
          <div class="text-center">
            <h3 class="text-lg font-semibold text-primary mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2M7 7h10M7 11h4" />
              </svg>
              Ice Cream Vendor?
            </h3>
            <p class="text-sm text-primary/80 mb-4">
              Enter your business email address and we'll get back to you with more information!
            </p>
            <form id="vendor-interest-form" class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
              <input 
                type="email" 
                name="email"
                placeholder="Enter your business email" 
                class="flex-1 px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent text-sm"
                required
              />
              <button 
                type="submit" 
                class="btn btn-secondary text-secondary-content px-6 hover:scale-105 transition-transform"
                id="vendor-submit-btn"
              >
                Register Interest
              </button>
            </form>
            <div id="vendor-message" class="mt-3 text-sm hidden"></div>
          </div>
        </div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('vendor-interest-form') as HTMLFormElement;
    const submitBtn = document.getElementById('vendor-submit-btn') as HTMLButtonElement;
    const messageDiv = document.getElementById('vendor-message') as HTMLDivElement;

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Disable button and show loading state
        submitBtn.disabled = true;
        submitBtn.textContent = 'Registering...';
        messageDiv.className = 'mt-3 text-sm hidden';

        try {
          const formData = new FormData(form);
          const response = await fetch('/send-vendor-interest.php', {
            method: 'POST',
            body: formData
          });

          const result = await response.json();

          if (result.success) {
            messageDiv.className = 'mt-3 text-sm text-green-600';
            messageDiv.innerHTML = result.message;
            form.reset();
          } else {
            messageDiv.className = 'mt-3 text-sm text-red-600';
            messageDiv.innerHTML = result.message;
          }
        } catch (error) {
          messageDiv.className = 'mt-3 text-sm text-red-600';
          messageDiv.textContent = 'Something went wrong. Please try again.';
        } finally {
          // Reset button
          submitBtn.disabled = false;
          submitBtn.textContent = 'Register';
          messageDiv.classList.remove('hidden');
        }
      });
    }
  });
</script>
        
        <div class="text-base-content/60 animate-fade-in-up delay-400">
        </div>
      </div>
      
      <!-- Right side - App Mockup -->
      <div class="order-1 lg:order-2 flex justify-center">
        <div class="w-64 animate-fade-in-scale delay-400">
          <img 
            src="/images/app-mockup.png" 
            alt="Chimes app interface showing ice cream van locations on a map"
            class="w-full h-auto rounded-2xl shadow-2xl hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
