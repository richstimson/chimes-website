---
// Vendor Getting Started page
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Getting started as a vendor - Chimes!">
  <Header />

  <!-- Back button and title -->
  <section class="pt-8 pb-4 bg-base-100">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-4 mb-6">
        <a href="/" class="btn btn-outline btn-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>
      </div>
      <div class="text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-base-content mb-6">
          Getting started as a <span class="text-primary">vendor</span>
        </h1>
        <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
          Follow these simple steps to get your ice cream business on the <span class="font-bold text-primary">Chimes</span> app and start reaching more customers.
        </p>
      </div>
    </div>
  </section>

  <!-- Getting Started Steps -->
  <section class="py-20 bg-base-200">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
        
        <!-- Step 1: Register Your Business -->
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="card-body text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>
            <h3 class="card-title text-xl text-base-content mb-3 justify-center">
              1. Register Your Business
            </h3>
            <p class="text-base-content/80 leading-relaxed mb-4 text-sm">
              Complete the business registration form below with your business details and contact information.
            </p>
            <div class="flex justify-center">
              <span class="badge badge-primary badge-sm">Start here</span>
            </div>
          </div>
        </div>

        <!-- Step 2: Download App -->
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="card-body text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <h3 class="card-title text-xl text-base-content mb-3 justify-center">
              2. Download App
            </h3>
            <p class="text-base-content/80 leading-relaxed mb-4 text-sm">
              Download the <strong>Chimes</strong> app from your device's app store.
            </p>
            <div class="flex flex-col gap-2">
              <a href="https://apps.apple.com/app/chimes" target="_blank" rel="noopener noreferrer" class="hover:scale-105 transition-transform">
                <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="Download on the App Store" class="h-10 w-auto mx-auto">
              </a>
              <a href="https://play.google.com/store/apps/details?id=com.chimes" target="_blank" rel="noopener noreferrer" class="hover:scale-105 transition-transform">
                <img src="https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png" alt="Get it on Google Play" class="h-12 w-auto mx-auto">
              </a>
            </div>
          </div>
        </div>

        <!-- Step 3: Sign Up in App -->
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="card-body text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            </div>
            <h3 class="card-title text-xl text-base-content mb-3 justify-center">
              3. Sign Up
            </h3>
            <p class="text-base-content/80 leading-relaxed mb-4 text-sm">
              Open the app, go to <strong>Settings</strong> → <strong>Vendor Sign In</strong>. Enter your business email address and click <strong>'Sign Up'</strong>.
            </p>
            <div class="flex justify-center">
              <span class="badge badge-accent badge-sm">24hr approval</span>
            </div>
          </div>
        </div>

        <!-- Step 4: Go Live -->
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
          <div class="card-body text-center">
            <div class="flex justify-center mb-4">
              <div class="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>
            <h3 class="card-title text-xl text-base-content mb-3 justify-center">
              4. Go Live!
            </h3>
            <p class="text-base-content/80 leading-relaxed mb-4 text-sm">
              <strong>Chimes</strong> will enable your account within 24 hours and your vehicle will be shown on the map. Start serving customers and growing your business!
            </p>
            <div class="flex justify-center">
              <span class="badge badge-success badge-sm">Start earning</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center mt-16">
        <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content shadow-xl max-w-4xl mx-auto">
          <div class="card-body">
            <h3 class="text-3xl font-bold mb-6">Start Your Journey with Chimes!</h3>
            <p class="text-xl mb-8 opacity-90">
              Fill out this form to get your ice cream business on the <span class="font-bold">Chimes</span> app.
            </p>
            
            <!-- Business Details Form -->
            <div class="bg-base-100 rounded-lg p-8 text-base-content">
              <form id="vendorForm" class="space-y-6">
                <!-- Business Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Business Name *</span>
                    </label>
                    <input name="businessName" type="text" placeholder="e.g. Mr. Whippy's Ice Cream" class="input input-bordered input-primary w-full" required />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Contact Name</span>
                    </label>
                    <input name="contactName" type="text" placeholder="Your full name" class="input input-bordered input-primary w-full" />
                  </div>
                </div>

                <!-- Contact Details -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Email Address *</span>
                    </label>
                    <input name="email" type="email" placeholder="your@business.com" class="input input-bordered input-primary w-full" required />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Phone Number *</span>
                    </label>
                    <input name="phone" type="tel" placeholder="07123 456789" class="input input-bordered input-primary w-full" required />
                  </div>
                </div>

                <!-- Website URL and WhatsApp Number -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Website URL</span>
                    </label>
                    <input name="website" type="url" placeholder="https://yourbusiness.co.uk" class="input input-bordered input-primary w-full" />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">WhatsApp Number (if different to phone number)</span>
                    </label>
                    <input name="whatsapp" type="tel" placeholder="07123 456789" class="input input-bordered input-primary w-full" />
                  </div>
                </div>

                <!-- Location Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Main Location (City/Area) *</span>
                    </label>
                    <input name="location" type="text" placeholder="e.g. Manchester, Birmingham" class="input input-bordered input-primary w-full" required />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Post Codes Covered</span>
                    </label>
                    <input name="postcodes" type="text" placeholder="e.g. M12, B15, LS10" class="input input-bordered input-primary w-full" />
                    <label class="label">
                      <span class="label-text-alt text-base-content/60">Separate multiple postcodes with commas</span>
                    </label>
                  </div>
                </div>

                <!-- Business Description -->
                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-semibold">Business Description</span>
                  </label>
                  <textarea name="description" class="textarea textarea-bordered textarea-primary h-24 w-full" placeholder="Tell us about your business..."></textarea>
                </div>

                <!-- Social Media Links -->
                <div class="divider">
                  <span class="text-lg font-semibold">Social Media (Optional)</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                        Facebook Page
                      </span>
                    </label>
                    <input name="facebook" type="url" placeholder="https://facebook.com/yourbusiness" class="input input-bordered w-full" />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-pink-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                        Instagram
                      </span>
                    </label>
                    <input name="instagram" type="url" placeholder="https://instagram.com/yourbusiness" class="input input-bordered w-full" />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22C6.486 22 2 17.514 2 12S6.486 2 12 2s10 4.486 10 10-4.486 10-10 10z"/>
                          <circle cx="12" cy="12" r="3"/>
                        </svg>
                        Other social media
                      </span>
                    </label>
                    <input name="socialOther1" type="url" placeholder="https://tiktok.com/@yourbusiness" class="input input-bordered w-full" />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22C6.486 22 2 17.514 2 12S6.486 2 12 2s10 4.486 10 10-4.486 10-10 10z"/>
                          <circle cx="12" cy="12" r="3"/>
                        </svg>
                        Other social media
                      </span>
                    </label>
                    <input name="socialOther2" type="url" placeholder="" class="input input-bordered w-full" />
                  </div>
                </div>

                <!-- Van Details -->
                <div class="divider">
                  <span class="text-lg font-semibold">Van Information</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Number of Vans</span>
                    </label>
                    <select name="numVans" class="select select-bordered select-primary w-full">
                      <option value="">Select number of vans</option>
                      <option value="1 van">1 van</option>
                      <option value="2 vans">2 vans</option>
                      <option value="3 vans">3 vans</option>
                      <option value="4+ vans">4+ vans</option>
                    </select>
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">Operating Days</span>
                    </label>
                    <select name="operatingDays" class="select select-bordered select-primary w-full">
                      <option value="">Select operating schedule</option>
                      <option value="Seasonal (Summer months)">Seasonal (Summer months)</option>
                      <option value="All year round">All year round</option>
                      <option value="Monday to Friday">Monday to Friday</option>
                      <option value="Weekends only">Weekends only</option>
                      <option value="Custom schedule">Custom schedule</option>
                    </select>
                  </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center pt-6">
                  <button type="submit" class="btn btn-primary btn-lg w-full sm:w-auto px-12 hover:scale-105 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                    Submit Application
                  </button>
                  <p class="text-sm text-base-content/60 mt-4">
                    We'll review your application and get back to you within 24 hours
                  </p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Important Notes -->
      <div class="mt-12 max-w-4xl mx-auto">
        <div class="bg-base-100 rounded-lg p-6 border border-base-300">
          <div class="text-center space-y-4">
            <p class="text-base-content/80 text-sm">
              <strong>Note:</strong> Chimes tracks your vehicle via your iPhone. If you would like to use an Android phone for tracking, or a dedicated GPS transmitter, please 
              <a href="/#contact" target="_blank" rel="noopener noreferrer" class="link link-primary font-semibold hover:underline">get in touch</a>.
            </p>
            <div class="divider my-2"></div>
            <p class="text-base-content/80 text-sm">
              <a href="/#contact" target="_blank" rel="noopener noreferrer" class="link link-primary font-semibold hover:underline">Any questions?</a> 
              We're here to help with your setup.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Form submission handler
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('vendorForm') as HTMLFormElement;
    const submitButton = document.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    if (!form || !submitButton) return;
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Store original button content
      const originalContent = submitButton.innerHTML;
      
      // Disable submit button and show loading state
      submitButton.disabled = true;
      submitButton.innerHTML = `
        <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Submitting...
      `;
      
      try {
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Client-side validation for required fields only
        const requiredFields = [
          { name: 'businessName', label: 'Business Name' },
          { name: 'email', label: 'Email Address' },
          { name: 'phone', label: 'Phone Number' },
          { name: 'location', label: 'Main Location' }
        ];
        
        const missingFields = requiredFields.filter(field => {
          const value = data[field.name];
          return !value || (typeof value === 'string' && value.trim() === '');
        });
        
        if (missingFields.length > 0) {
          const missingLabels = missingFields.map(field => field.label);
          alert('Please fill in the following required fields:\n• ' + missingLabels.join('\n• '));
          // Focus on the first missing field
          const firstMissingInput = form.querySelector(`[name="${missingFields[0].name}"]`) as HTMLInputElement;
          if (firstMissingInput) {
            firstMissingInput.focus();
            firstMissingInput.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
          return;
        }
        
        // Determine the correct endpoint URL
        const isDev = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const endpoint = isDev ? 'http://localhost/send-vendor-email.php' : '/send-vendor-email.php';
        
        // Submit form
        const response = await fetch(endpoint, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Show success message
          alert('Registration submitted successfully! We\'ll review your application and get back to you within 24 hours.');
          form.reset();
        } else {
          // Show error message
          alert(result.message || 'There was an error submitting your registration. Please try again.');
        }
        
      } catch (error) {
        console.error('Form submission error:', error);
        alert('There was an error submitting your registration. Please check your internet connection and try again.');
      } finally {
        // Re-enable submit button and restore original content
        submitButton.disabled = false;
        submitButton.innerHTML = originalContent;
      }
    });
  });
</script>
